      </font>
   </Text>
   <ImageView fx:id="playerNumberBackground" fitHeight="49.0" fitWidth="221.0" layoutX="170.0" layoutY="201.0" pickOnBounds="true">
      <effect>
         <BoxBlur height="0.0" width="255.0" />
