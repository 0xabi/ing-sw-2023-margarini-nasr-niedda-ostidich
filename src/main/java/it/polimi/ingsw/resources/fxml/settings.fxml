      <effect>
         <Reflection fraction="0.26" topOpacity="0.26" />
      </effect>
   </Button>
   <ImageView fx:id="username_lbl_background" fitHeight="49.0" fitWidth="434.0" layoutX="333.0" layoutY="124.0" pickOnBounds="true">
